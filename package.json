{
  "name": "placeholders",
  "type": "module",
  "private": true,
  "version": "0.0.2",
  "scripts": {
    "prepare": "husky",
    "format:assets": "npx prettier --write '**/*.{js,css}'",
    "format:php": "vendor/bin/php-cs-fixer fix --config config/phpcsfixer.config.php --allow-risky=yes",
    "version:prepare": "pnpm changeset version && pnpm version:patch",
    "version:patch": "node config/scripts/patchVersion.js $(basename \"$(pwd)\").php readme.txt",
    "wp-env": "wp-env"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@wordpress/env": "^10.11.0",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3"
  }
}
